#!/usr/bin/env bash
# This script loops from 1 to 10 and displays different messages based on the iteration number

# Initialize a counter variable
counter=1

# Use the while loop to repeat the echo command until the counter reaches 10
while [ $counter -le 10 ]; do
    if [ $counter -eq 4 ]; then
        echo "bad luck"
    elif [ $counter -eq 8 ]; then
        echo "good luck"
    else
        echo "Best School"
    fi
    ((counter++))
done

#!/usr/bin/env bash
# Install and configure Nginx web server

sudo apt-get update
sudo apt-get install -y nginx

# Create or modify an Nginx site configuration
echo "server {
    listen 80;
    server_name _;  # Listen on all hostnames
    location / {
        root /var/www/html;
        index index.html;
    }
}" | sudo tee /etc/nginx/sites-available/my-site

# Reload Nginx to apply the configuration
sudo service nginx reload
